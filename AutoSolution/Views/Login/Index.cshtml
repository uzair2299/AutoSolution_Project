
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="main col-lg-6 col-md-6 col-sm-12">
            <div class="d-flex flex-column h-100">
                <div class="text-right p-3">
                    <span>Don't have an account yet?</span>&nbsp;&nbsp;
                    <a href="#" class="">Register!</a>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex h-100 align-items-center justify-content-center">
                        <div>
                            <h2 class="signup text-center mb-4">Login</h2>
                            <div class="input-group mb-3" style="width: 400px">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                            <div class="input-group mb-3" style="width: 400px">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                                </div>
                                <input type="text" class="form-control custom-password" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                </div>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label mb-2" for="exampleCheck1">Remember Me</label>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="forget-password-link">
                                    <a class="text-black-50" href="#" id="forgetpassword">Forgot Password</a>
                                </div>
                                <div class="">
                                    <div class="">
                                        <button type="submit" class="btn btn-dark">Login</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

