                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-xl-6">
                                    <div class="kt-checkbox-inline">
                                        <label class="kt-checkbox kt-checkbox--solid kt-checkbox--brand">
                                            @Html.CheckBoxFor(x => Model.IsTermAndConditionAccepted)
                                            <a href="/TermsAndConditions/index" class="kt-link kt-font-bolder" style="color:#646c9a">I have read and agree to the Terms and Conditions</a>
                                            <span></span>
