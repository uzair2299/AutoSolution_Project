@model AutoSolution.Services.ViewModel.VehilceModelViewModel

    <div class="modal fade" id="kt_modal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit/Update Vehicle Model</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <form class="kt-form kt-form--fit kt-margin-b-20" id="EditCarManufacturer">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.VehicleModel, htmlAttributes: new { @class = "col-form-label" })
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-car-alt"></i></span></div>
                                        @Html.EditorFor(model => model.VehicleModel, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.HiddenFor(model => model.VehicleModelId)
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-xl-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.YearOfManufacture, htmlAttributes: new { @class = "col-form-label" })
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-calendar-alt"></i></span></div>
                                        @Html.EditorFor(model => model.YearOfManufacture, new { htmlAttributes = new { @class = "form-control yearselect" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-xl-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SelectedVehicleManufacturer, htmlAttributes: new { @class = "col-form-label" })
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-car-side"></i></span></div>
                                        @Html.DropDownListFor(x => Model.SelectedVehicleManufacturer, Model.VehicleManufacturersList as SelectList, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        
