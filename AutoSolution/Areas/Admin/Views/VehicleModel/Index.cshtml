
@{
    ViewBag.Title = "Index";
}

    <div class="kt-subheader  kt-grid__item" id="kt_subheader">
        <div class="kt-container  kt-container--fluid ">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">Manage Vehicle Models</h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <button type="button" class="btn btn-dark" id="Add_New" @Url.Action("AddNew", "VehicleModel")><i class="flaticon-plus"></i>Add New Vehicle Model</button>
            </div>
        </div>
    </div>
    <div id="AddNewContainer">

    </div>
    <div id="EditModal">
        @*edit*@
    </div>

    <div id="VehicleModelDetails">



    </div>

    <div id="tableContiner">
        @{Html.RenderAction("GetVehicleModel");}
    </div>





    <script>
    var rendered = false;

    $("#Add_New").click(function () {
        if (!rendered) {
            $.ajax({
                url: '@Url.Action("AddNew","VehicleModel")',
                type: 'GET',
            })
                .done(function (response) {
                    //debugger;
                    $('#AddNewContainer').html("");
                    $('#AddNewContainer').html(response);
                    rendered = true;
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
        } else {
            $('#AddNewContainer').html("");
            rendered = false;
        }
    });



    </script>