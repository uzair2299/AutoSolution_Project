@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="kt-subheader  kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Manage Vehicle Manufacturers</h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <button type="button" class="btn btn-dark" id="Add_New" @Url.Action("AddNew","Vehicle")><i class="flaticon-plus"></i>Add New Vehicle Manufacturer</button>
        </div>
    </div>
</div>
<div id="AddNewContainer">

</div>
<div id="myModal">
  @*edit*@  
</div>
<div id="VehicleManufacturerDetails">



</div>
<div id="tableContiner">
    @{Html.RenderAction("GetVehicleManufacturer");}
</div>

<script>
    var rendered = false;

    $("#Add_New").click(function () {
        if (!rendered) {
            $.ajax({
                url: '@Url.Action("AddNew","Vehicle")',
                type: 'GET',
            })
                .done(function (response) {
                    //debugger;
                    $('#AddNewContainer').html(response);
                    rendered = true;
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
        } else {
            $('#AddNewContainer').html("");
            rendered = false;
        }
    });





</script>