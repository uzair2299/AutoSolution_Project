<script>

$("#SaveBtn").click(function () {
            var name = $("#VehicleManufacturer").val();
            $.ajax({
            type: "POST",
                url: '@Url.Action("AddNew", "Vehicle")',
                data: {
                    Name:name,
                }
            })
                .done(function (response) {

                    $("#kt_modal_6").modal("hide");
                    $("#AddNew").trigger("reset");
                  

            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
        });

    </script>




