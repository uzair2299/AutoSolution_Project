@model IEnumerable<AutoSolution.Entities.ServiceCategory>
@{
    ViewBag.Title = "Index";
    int counter = 0;
}

<div class="kt-subheader  kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Manage Categoies</h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <button type="button" data-toggle="modal" data-target="#kt_modal_6" class="btn btn-dark"><i class="flaticon-plus"></i>Add New Category</button>
        </div>
    </div>
</div>
<div class="modal fade" id="ConfirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-secondary" role="alert">
                    <div class="alert-icon"><i class="flaticon-warning kt-font-danger"></i></div>
                    <div class="alert-text">
                        Are you sure you want to delete this record?
                    </div>
                </div>
                <div class="col-sm" style="margin-top:3.25rem;margin-bottom:5.25rem">
                    <div class="kt-spinner kt-spinner--v2 kt-spinner--lg kt-spinner--dark" style="margin:0 auto;width:50px"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-dark" onclick="DeleteCategory()">Delete</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="kt_modal_6" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    @{
        Html.RenderAction("AddNewPartialView");
    }
</div>
<!-- begin:: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-dark flaticon-app"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Search Category
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <form class="kt-form kt-form--fit kt-margin-b-20">
                <div class="row kt-margin-b-20">
                    <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                        <label>Category Name:</label>
                        <input type="text" class="form-control kt-input" placeholder="Enter Category Name" data-col-index="0">
                    </div>
                </div>
                <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-dark btn-brand--icon" id="kt_search">
                            <span>
                                <i class="la la-search"></i>
                                <span>Search</span>
                            </span>
                        </button>
                        &nbsp;&nbsp;
                        <button class="btn btn-secondary btn-secondary--icon" id="kt_reset">
                            <span>
                                <i class="la la-close"></i>
                                <span>Reset</span>
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-dark flaticon-app"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Categories
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <!--begin: Datatable -->
            <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer" id="kt_table_1" aria-describedby="kt_table_1_info" role="grid">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_disabled" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Record ID: activate to sort column descending" style="width: 46.25px;">#</th>
                                    <th class="sorting_disabled" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" aria-label="Order ID: activate to sort column ascending">@Html.DisplayNameFor(model => model.ServiceCategoryName)</th>
                                    <th class="sorting_disabled" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" aria-label="Order ID: activate to sort column ascending">@Html.DisplayNameFor(model => model.ServiceCategoryCode)</th>
                                    <th class="sorting_disabled" tabindex="0" aria-controls="kt_table_1" rowspan="1" colspan="1" aria-label="Order ID: activate to sort column ascending">@Html.DisplayNameFor(model => model.Description)</th>
                                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr role="row" class="even"  id="row_@item.Id">
                                                <td class="sorting_1">@(++counter)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ServiceCategoryName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ServiceCategoryCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                                <td class="kt-align-center">
                                                    <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="View">
                                                        <i class="la la-eye kt-font-dark"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Edit">
                                                        <i class="la la-edit kt-font-dark"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Delete" onclick="ConfirmDelete(@item.Id)"><i class="la la-trash kt-font-dark"></i></button>


                                                </td>
                                            </tr>
                                        }

                                    }
                                    else
                                    {
                                        <tr role="row" class="even">
                                            <td colspan="3" class="kt-align-center">
                                                No Data Found
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <input type="hidden" id="HiddenId" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_info">Showing 1 to 10 of 50 entries</div>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <div class="dataTables_paginate paging_simple_numbers">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous disabled"><a href="#" aria-controls="kt_table_1" data-dt-idx="0" tabindex="0" class="page-link"><i class="la la-angle-left"></i></a></li>
                                <li class="paginate_button page-item active"><a href="#" aria-controls="kt_table_1" data-dt-idx="1" tabindex="0" class="page-link">1</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="2" tabindex="0" class="page-link">2</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="3" tabindex="0" class="page-link">3</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="4" tabindex="0" class="page-link">4</a></li>
                                <li class="paginate_button page-item "><a href="#" aria-controls="kt_table_1" data-dt-idx="5" tabindex="0" class="page-link">5</a></li>
                                <li class="paginate_button page-item next"><a href="#" aria-controls="kt_table_1" data-dt-idx="6" tabindex="0" class="page-link"><i class="la la-angle-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end: Datatable -->
        </div>
    </div>
</div>
<!-- end:: Content -->

<script>

    var ConfirmDelete = function (Id) {

        $("#HiddenId").val(Id);
        $("#ConfirmDeleteModal").modal('show');
    }

    var DeleteCategory = function () {

        $("#loaderDiv").show();
        var Id = $("#HiddenId").val();
        $.ajax({
            type: "POST",
            url: "/Categories/DeleteCategory",
            data: { Id: Id },
            success: function (result) {
                $("#loaderDiv").hide();
                $("#ConfirmDeleteModal").modal("hide");
                $("row_" + Id).remove();
            }})
    }
    </script>