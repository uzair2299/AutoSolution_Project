@model AutoSolution.Services.ViewModel.ProvinceViewModel

<div class="modal fade" id="kt_modal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit/Update Province</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form class="kt-form kt-form--fit kt-margin-b-20" id="EditProvince">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 col-xl-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.ProvinceName, htmlAttributes: new { @class = "col-form-label" })
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-car-alt"></i></span></div>
                                    @Html.EditorFor(model => model.ProvinceName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.HiddenFor(model => model.ProvinceId)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.ProvinceCode, htmlAttributes: new { @class = "col-form-label" })
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-car-alt"></i></span></div>
                                    @Html.EditorFor(model => model.ProvinceCode, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-xl-12">
                            <div class="kt-checkbox-inline">
                                <label class="kt-checkbox kt-checkbox--solid kt-checkbox--brand">
                                    @Html.CheckBoxFor(x => Model.IsActive)
                                    Is Active
                                    <span></span>
                                </label>
                                <span class="form-text text-muted">@Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })</span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-dark" id="SaveBtn">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>

    $("#SaveBtn").click(function () {
        $('#kt_modal_1').modal('hide');

            $.ajax({
            url:' @Url.Action("Edit","Province")',
            type: 'POST',
                data: $("#EditProvince").serialize()
		})
                .done(function (response) {
                    debugger
                    alert("Done");
                    $('#kt_modal_1').modal('hide');
                    $('#tableContiner').html("");
                    $('#tableContiner').html(response);

        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
        	alert("FAIL");
        });
        });

</script>
