@model AutoSolution.Entities.City
@{
    ViewBag.Title = "Index";
}

<div class="kt-subheader  kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Manage Cities</h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <button type="button" data-toggle="modal" data-target="#kt_modal_6" class="btn btn-dark"><i class="flaticon-plus"></i>Add New City</button>
        </div>
    </div>
</div>
<div class="modal fade" id="kt_modal_6" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add New City</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddCity", "Cities", FormMethod.Post, htmlAttributes: new { @class = "kt-form kt-form--label-right" }))
                {
                    <div class="kt-portlet__body">
                        <div class="form-group ">
                            <label>City Name</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i class="fa fa-location-arrow kt-font-dark"></i></span></div>
                                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <span class="form-text text-muted">@Html.ValidationMessageFor(model => model.CityName, "")</span>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Select Province</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-map-marked-alt kt-font-dark"></i></span></div>
                                <select class="form-control">
                                    <option>--Select--</option>
                                    <option>Punjab</option>
                                    <option>Balochistan</option>
                                    <option>Sindth</option>
                                    <option>Khyber Pakhtunkhwa</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- begin:: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-dark flaticon2-map"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Search City
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <form class="kt-form kt-form--fit kt-margin-b-20">
                <div class="row kt-margin-b-20">
                    <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                        <label>City Name:</label>
                        <input type="text" class="form-control kt-input" placeholder="Enter City Name" data-col-index="0">
                    </div>
                    <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                        <label>Province:</label>
                        <select class="form-control kt-input" data-col-index="2">
                            <option value="">Select</option>
                            <option value="">Punjab</option>
                            <option value="">Balochistan</option>
                            <option value="">Khyber Pakhtunkhwa</option>
                            <option value="">Sindh</option>
                        </select>
                    </div>
                </div>
                <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-dark btn-brand--icon" id="kt_search">
                            <span>
                                <i class="la la-search"></i>
                                <span>Search</span>
                            </span>
                        </button>
                        &nbsp;&nbsp;
                        <button class="btn btn-secondary btn-secondary--icon" id="kt_reset">
                            <span>
                                <i class="la la-close"></i>
                                <span>Reset</span>
                            </span>
                        </button>
                    </div>
                </div>
            </form>

            <!--begin: Datatable -->

            
            <!--end: Datatable -->
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
